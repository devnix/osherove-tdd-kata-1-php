{
    "name": "devnix/osherove-tdd-kata-1-php",
    "type": "project",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@php vendor/bin/phpunit",
            "@php vendor/bin/phpstan"
        ]
    }
}
